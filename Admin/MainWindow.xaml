<Window x:Class="Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Control Panel" Height="600" Width="900"
     WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <Border Background="White" CornerRadius="10" Margin="20" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Admin Control Panel" FontSize="24" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Admin: " FontSize="14"/>
                        <TextBox x:Name="AdminNameTextBox" Width="150" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                        <TextBlock Text="  |  Status: " FontSize="14" Margin="20,0,0,0"/>
                        <Ellipse x:Name="AdminStatusIndicator" Width="12" Height="12" Fill="Red" Margin="5,0,0,0"/>
                        <TextBlock x:Name="AdminStatusText" Text="Disconnected" FontSize="14" Margin="5,0,0,0"/>
                    </StackPanel>
                    <TextBlock x:Name="AdminIdTextBlock" Text="Admin ID: ..." FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Pending Count -->
                <Border Grid.Row="1" Background="#E3F2FD" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Total Pending Requests: " FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock x:Name="TotalPendingTextBlock" Text="0" FontSize="20" FontWeight="Bold" 
 Foreground="#1976D2" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Requests List -->
                <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="LoginRequestsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15" Background="White">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Username}" FontSize="16" FontWeight="Bold"/>
                                                <TextBlock FontSize="12" Foreground="Gray" Margin="0,5,0,0">
  <Run Text="IP:"/>
       <Run Text="{Binding IpAddress}"/>
          <Run Text=" | Device:"/>
     <Run Text="{Binding DeviceInfo}"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding RequestedAt, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
        FontSize="11" Foreground="Gray" Margin="0,3,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                
                                                <Button Content="✓ Approve" Width="90" Height="35" Margin="0,0,10,0"
     Background="#4CAF50" Foreground="White" BorderThickness="0"
      Tag="{Binding}" Click="ApproveButton_Click"/>
                                                <Button Content="✕ Reject" Width="90" Height="35"
       Background="#F44336" Foreground="White" BorderThickness="0"
        Tag="{Binding}" Click="RejectButton_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Activity Log -->
                <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1" 
            CornerRadius="5" Padding="10" Margin="0,15,415,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Activity Log" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="ActivityLogTextBlock" FontSize="10" FontFamily="Consolas" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
                <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1" 
            CornerRadius="5" Padding="10" Margin="415,15,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="History Log" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding Username}" x:Name="HistoryTextBlock"  FontSize="10" FontFamily="Consolas" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

            </Grid>
        </Border>
    </Grid>
</Window>
