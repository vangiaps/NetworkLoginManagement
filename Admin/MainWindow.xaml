<Window x:Class="Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Control Panel" Height="600" Width="900"
     WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <Border Background="White" CornerRadius="10" Margin="20" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="100.173"/>
                    <RowDefinition Height="Auto" MinHeight="71.427"/>
                    <RowDefinition/>
                    <RowDefinition Height="114.44"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Admin Control Panel" FontSize="24" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Admin: " FontSize="14"/>
                        <TextBox x:Name="AdminNameTextBox" Width="150" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                        <TextBlock Text="  |  Status: " FontSize="14" Margin="20,0,0,0"/>
                        <Ellipse x:Name="AdminStatusIndicator" Width="12" Height="12" Fill="Red" Margin="5,0,0,0"/>
                        <TextBlock x:Name="AdminStatusText" Text="Disconnected" FontSize="14" Margin="5,0,0,0"/>
                    </StackPanel>
                    <TextBlock x:Name="AdminIdTextBlock" Text="Admin ID: ..." FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Pending Count -->
                <Border Background="#E3F2FD" CornerRadius="5" Padding="15" Margin="0,100,0,15" Grid.RowSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <!-- Bên trái tự co giãn -->
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <!-- Button 1 -->
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="111"/>
                            <!-- Button 2 -->
                        </Grid.ColumnDefinitions>

                        <!-- Bên trái -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <TextBlock Text="Total Pending Requests: "
                       FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TotalPendingTextBlock" Text="0"
                       FontSize="20" FontWeight="Bold"
                       Foreground="#1976D2" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Button 1 -->
                        <Button x:Name="btnRequests" Grid.Column="1" Content="Loin Requests"
                Margin="0,-5,10,-5" FontWeight="Bold" Click="MenuRequests_Click">

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="6" 
                    Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Button 2 -->
                        <Button x:Name="btnHistory" Grid.Column="2" Content="Login History"
                Margin="10,-5,0,-5" FontWeight="Bold" Click="MenuHistory_Click">

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="6" 
                    Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Button 3 -->
                        <Button x:Name="btnClients" Grid.Column="3" Content="Account"
Margin="10,-5,0,-5" FontWeight="Bold" Click="MenuClients_Click">

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="6" 
    Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Requests List -->
                <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="0,0,0,1">
                    <ContentControl x:Name="MainContentArea" Margin="0,-1,0,0"/>
                </Border>

                <!-- Activity Log -->
                <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1" 
            CornerRadius="5" Padding="10" Margin="0,10,415,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Activity Log" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="ActivityLogTextBlock" FontSize="10" FontFamily="Consolas" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
                <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1" 
            CornerRadius="5" Padding="10" Margin="415,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="History Log" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding Username}" x:Name="HistoryTextBlock"  FontSize="10" FontFamily="Consolas" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

            </Grid>
        </Border>
    </Grid>
</Window>
