<UserControl x:Class="Admin.History"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="HistoryListView" d:ItemsSource="{d:SampleData ItemCount=1}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Username" DisplayMemberBinding="{Binding Username}" Width="120"/>
                    <GridViewColumn Header="Action" DisplayMemberBinding="{Binding Action}" Width="120"/>
                    <GridViewColumn Header="Thời gian" DisplayMemberBinding="{Binding Time}" Width="150"/>
                    <GridViewColumn Header="Trạng thái" DisplayMemberBinding="{Binding Status}" Width="100"/>
                    <GridViewColumn Header="IP Address" DisplayMemberBinding="{Binding IpAddress}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
