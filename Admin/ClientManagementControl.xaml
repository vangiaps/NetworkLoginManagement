<UserControl x:Class="Admin.ClientManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <Border BorderBrush="#DDD" BorderThickness="1" Margin="10" CornerRadius="5">
            <DockPanel>

                <Button Content="⟳ Refresh" Width="80" HorizontalAlignment="Right" Margin="10" DockPanel.Dock="Top" Click="RefreshButton_Click"/>

                <ListView x:Name="ClientListView" BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                            <GridViewColumn Header="Username" DisplayMemberBinding="{Binding Username}" Width="120"/>
                            <GridViewColumn Header="Họ tên" DisplayMemberBinding="{Binding FullName}" Width="150"/>
                            <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="200"/>

                            <GridViewColumn Header="" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Width="100" Click="ToggleStatus_Click" Tag="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Content" Value="🔒 LOCK"/>
                                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                                <Setter Property="Foreground" Value="Red"/>
                                                                <Setter Property="BorderBrush" Value="Red"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Content" Value="🔓 UNLOCK"/>
                                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                                <Setter Property="Foreground" Value="Green"/>
                                                                <Setter Property="BorderBrush" Value="Green"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="🗑 DEL" Width="60" Height="25"
                            Background="#333" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Tag="{Binding}" Click="DeleteUser_Click">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="3"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>