<UserControl x:Class="Admin.LoginRequestsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="LoginRequestsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15" Background="White">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Username}" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock FontSize="12" Foreground="Gray" Margin="0,5,0,0">
<Run Text="IP:"/>
     <Run Text="{Binding IpAddress}"/>
        <Run Text=" | Device:"/>
   <Run Text="{Binding DeviceInfo}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding RequestedAt, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
      FontSize="11" Foreground="Gray" Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                                        <Button Content="✓ Approve" Width="90" Height="35" Margin="0,0,10,0"
   Background="#4CAF50" Foreground="White" BorderThickness="0"
    Tag="{Binding}" Click="ApproveButton_Click"/>
                                        <Button Content="✕ Reject" Width="90" Height="35"
     Background="#F44336" Foreground="White" BorderThickness="0"
      Tag="{Binding}" Click="RejectButton_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
