<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Login Portal" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
   ResizeMode="CanMinimize">
    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Container -->
        <Border Background="White" CornerRadius="15" Margin="50">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="0"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Branding -->
                <Border Background="#667eea" CornerRadius="15,0,0,15">
                    <StackPanel VerticalAlignment="Center" Margin="40">
                        <Ellipse Width="100" Height="100" Fill="White" Margin="0,0,0,30">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="👤" FontSize="60" HorizontalAlignment="Center" Margin="0,-95,0,25"/>

                        <TextBlock Text="Client Portal" FontSize="32" FontWeight="Bold" 
            Foreground="White" TextAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Secure Login System" FontSize="16" 
         Foreground="#E0E0E0" TextAlignment="Center" Margin="0,0,0,40"/>

                        <StackPanel Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="🔒" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="Secure Authentication" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="⚡" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="Real-time Approval" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="🛡️" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="Admin Verification" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Right Panel - Login Form -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="60,40">
                    <TextBlock Text="Welcome Back" FontSize="28" FontWeight="Bold" 
  Foreground="#333" Margin="0,0,0,10"/>
                    <TextBlock Text="Login to your account" FontSize="14" 
            Foreground="#999" Margin="0,0,0,40"/>

                    <!-- Username -->
                    <TextBlock Text="Username" FontSize="13" Foreground="#666" 
         Margin="0,0,0,8" FontWeight="SemiBold"/>
                    <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" 
       BorderThickness="1" Margin="0,0,0,20">
                        <TextBox x:Name="UsernameTextBox" Height="45" Padding="15,12" 
    FontSize="14" Background="Transparent" BorderThickness="0"
       Foreground="#333" Text=""/>
                    </Border>

                    <!-- Password -->
                    <TextBlock Text="Password" FontSize="13" Foreground="#666" 
       Margin="0,0,0,8" FontWeight="SemiBold"/>
                    <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" 
    BorderThickness="1" Margin="0,0,0,20">
                        <PasswordBox x:Name="PasswordBox" Height="45" Padding="15,12" 
          FontSize="14" Background="Transparent" BorderThickness="0"
   Foreground="#333"/>
                    </Border>

                    <!-- Connection Status -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Ellipse x:Name="StatusIndicator" Width="12" Height="12" 
   Fill="Red" Margin="0,0,10,0"/>
                        <TextBlock x:Name="StatusText" Text="Disconnected" 
      FontSize="12" Foreground="#666"/>
                    </StackPanel>

                    <!-- Login Button-->

                    <Button x:Name="LoginButton" Content="Login" Click="LoginButton_Click" 
      Height="50" FontSize="16" FontWeight="Bold"
          Background="#667eea" Foreground="White" BorderThickness="0" 
          Cursor="Hand" Margin="0,0,0,15" >
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
       CornerRadius="8" Padding="15">
                                                <ContentPresenter HorizontalAlignment="Center" 
              VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5568d3"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#cccccc"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Register Link -->
                    
                    <TextBlock HorizontalAlignment="Center" Margin="0,0,0,15">
   <Run Text="Don't have an account? " Foreground="#666" FontSize="13"/>
       <Hyperlink Foreground="#667eea" TextDecorations="None" Click="RegisterLink_Click" >
   <Run Text="Register here" FontWeight="SemiBold" />
      </Hyperlink>
                    </TextBlock>

                    <!-- Message Log -->
                    <TextBlock Text="Activity Log" FontSize="13" Foreground="#666" 
     Margin="0,20,0,8" FontWeight="SemiBold"/>
                    <Border Background="#F8F9FA" CornerRadius="8" BorderBrush="#E0E0E0" 
       BorderThickness="1" Height="220">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="LogTextBlock" Padding="15" FontSize="12" 
            Foreground="#666" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
